<%- include('../includes/header.ejs')%>
<%- include('../includes/navigation.ejs')%>
<main>
    <h1>My Orders</h1>
    <% if (orders.length > 0) {%>
        <ul>
            <% orders.forEach(order => { %>
                <h2># <%= order.id%></h2>
                <ul>
                <% order.products.forEach(product => { %>
                    <li><%= product.title%> ( <%= product.orderItem.quantity%> )</li> 
               <% });%>
               </ul>
               
           <% });%>
        </ul>
    <%} else {%>
    <h2>No orders yet !</h2>
    <%}%>
</main>
